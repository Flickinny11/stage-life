    // Enable enhanced web search features
    "websearchforcopilot.enabled": true,
    "websearchforcopilot.searchEngine": "brave",
    
    // Enhanced Copilot features
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
